# NOTICAL Website Environment Variables
# Copy this file to .env and update the values

# API Configuration
REACT_APP_API_URL=http://localhost:8001
REACT_APP_WEBSITE_URL=http://localhost:3000

# Feature Flags
REACT_APP_ENABLE_AI=true
REACT_APP_ENABLE_TRAINING=true
REACT_APP_ENABLE_EXPORT=false

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# AI Pipeline Settings
REACT_APP_AI_TIMEOUT=30000
REACT_APP_MAX_CARDS=50
REACT_APP_DEFAULT_GENERATION_MODE=text_understanding
REACT_APP_DEFAULT_STYLE=professional
